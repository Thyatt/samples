<header class="page-header">
  <video class="bg-vid" loop="" muted="" autoplay="" poster="fpo.jpg">
    <source src="/fpo.mp4">
  </video>
  <div class="wrapper">

    <h1 class="white">
      It's what makes <br/>
      stories worth telling. <br/>
      Real heart.
    </h1>

    <div class="video-outer">
      <div class="inner">
        <div class="expandingVideo">
          <a href="" class="videoPoster button video">
            <img src="/play.svg"/> play reel
          </a>
          <div class="videoContainer">
            <% o = [('a'..'z'), ('A'..'Z')].map(&:to_a).flatten %>
            <% randomID = (0...16).map { o[rand(o.length)] }.join %>
            <%= render :partial => 'shared/video_player', :locals => { randomID: randomID, src: '/fpo2.mp4', thumbnail_url: '/fpo.jpg', captions_url: '/fpo.vtt'} %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="layer multiply wide tall layer4 horizontal right mobile-hide" style="bottom: 69px; left: -40px;"></div>
  <div class="layer multiply mwide tall layer4 horizontal right mobile-show" style="bottom: 24px; left: -50px;"></div>

  <div class="overflow">
    <div class="layer multiply xxxwide short layer5 horizontal left mobile-hide" style="bottom: 0; right: -50px;"></div>
    <div class="layer multiply xxxwide short layer5 horizontal left mobile-show dark" style="bottom: 0; right: -35px;"></div>
  </div>

</header>

